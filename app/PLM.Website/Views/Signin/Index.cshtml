@model SigninViewModel
@{
    Layout = "_SigninLayout";
}

<div class="card-body">
    <p class="login-box-msg">Please login to your account</p>

    <form asp-action="Index" method="post">
        <div class="input-group mb-3">
            <input asp-for="SigninUser" type="text" class="form-control" placeholder="Account">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user-circle"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="icheck-primary">
                    <input asp-for="RememberPassword" type="checkbox" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>
            </div>
        </div>

        <div class="social-auth-links text-center mt-2 mb-3">
            <button type="submit" class="btn btn-block btn-primary">Sign In</button>
        </div>
    </form>

    <p class="mb-1">
        <a asp-action="ForgotPassword">I forgot my password</a>
    </p>
</div>